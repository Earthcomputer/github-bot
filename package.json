{
  "name": "github-bot",
  "version": "1.0.0",
  "private": true,
  "description": "Saving Earth time since 2019",
  "author": "Joseph Burton <burtonjae@hotmail.co.uk>",
  "license": "ISC",
  "repository": "https://github.com/Earthcomputer/github-bot.git",
  "homepage": "https://github.com/Earthcomputer/github-bot",
